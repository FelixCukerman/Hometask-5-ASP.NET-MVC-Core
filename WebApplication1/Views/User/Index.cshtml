@model List<WebApplication1.Models.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/js/bootstrap.min.js" />

<div class="container-fluid">
    <h1 class="text-center">Our users</h1>
</div>

<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4"><mark>Avatar</mark></div>
        <div class="col-md-4"><mark>Username</mark></div>
        <div class="col-md-4"><mark>Email</mark></div>
    </div>
    @foreach (var user in Model)
    {
        <hr />
        <div class="row">
            <div class="col-md-4"><img src="@user.Avatar" /></div>
            <div class="col-md-4"><p class="text-left">@Html.ActionLink(user.Name, "UserID", new { id = user.Id })</p></div>
            <div class="col-md-4"><p class="text-left">@user.Email</p></div>
        </div>
    }
</div>