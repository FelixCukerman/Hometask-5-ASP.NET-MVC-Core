@model List<WebApplication1.Models.AmountComment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<h4>AmountComment</h4>
<hr />

<form class="form-group" method="post">
    <input type ="number" name="id" placeholder="user id" style="width:15%"/>
    <button type="submit">Submit</button>
</form>

@if(Model != null)
{
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="active">
                <th>Id</th>
                <th>Title</th>
                <th>Amount of likes</th>
                <th>Amount of comment</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.post.Id</td>
                <td>@Html.ActionLink(@item.post.Title, "PostID", "Post", new { id = item.post.Id })</td>
                <td>@item.post.Likes</td>
                <td>@item.count</td>
            </tr>
        }
    </table>
}