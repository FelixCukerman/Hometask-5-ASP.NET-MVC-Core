@model WebApplication1.Models.PostSelection
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<form class="form-group" method="post">
    <input type="number" name="id" placeholder="user id" style="width:15%" />
    <button type="submit">Submit</button>
</form>

@if (Model != null)
{
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="active">
                <th>Post</th>
                <th>Longest comment</th>
                <th>Comment by most like</th>
                <th>Amount of comment</th>
            </tr>
        </thead>
        <tr>
            <td>@Html.ActionLink(Model.post.Title, "PostID", "Post", new { id = Model.post.Id })</td>
            <td>@Model.LongestComment.Body</td>
            <td>@Model.CommentByMostLike.Body</td>
            <td>@Model.CommentAmount</td>
        </tr>
    </table>

    <br />
    <table class="table table-hover table-bordered">
        <tr class="collapse" id="hide">
        </tr>
    </table>
}