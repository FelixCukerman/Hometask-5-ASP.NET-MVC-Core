@model List<WebApplication1.Models.Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<form class="form-group" method="post">
    <input type="number" name="id" placeholder="user id" style="width:15%" />
    <button type="submit">Submit</button>
</form>

@if (Model != null)
{
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="active">
                <th>Id</th>
                <th>Body</th>
                <th>Likes</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Body</td>
                <td>@item.Likes</td>
            </tr>
        }
    </table>
}